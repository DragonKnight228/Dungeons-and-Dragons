<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content" android:layout_width="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_for_field">

        <TextView
            android:id="@+id/id_character"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="0.3"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@id/character_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/textview_font" />

        <TextView
            android:id="@+id/character_name"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="0.3"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@id/character_level"
            app:layout_constraintStart_toEndOf="@id/id_character"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/textview_font" />

        <TextView
            android:id="@+id/character_level"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/character_name"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/textview_font" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>