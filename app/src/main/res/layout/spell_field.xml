<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_for_weapon_magic_skills">

    <Button
        android:layout_width="match_parent"
        android:layout_height="100sp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:gravity="center"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/weapon_name"
            android:layout_width="150sp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/damage_text"
            android:layout_width="130sp"
            android:layout_height="32sp"
            android:text="@string/damage"
            app:layout_constraintBottom_toTopOf="@id/damage"
            app:layout_constraintStart_toEndOf="@id/weapon_name"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/damage"
            android:layout_width="0sp"
            android:layout_height="65sp"
            app:layout_constraintEnd_toStartOf="@+id/level_text"
            app:layout_constraintStart_toEndOf="@id/weapon_name"
            app:layout_constraintTop_toBottomOf="@id/damage_text"
            />

        <TextView
            android:id="@+id/level_text"
            android:layout_width="130sp"
            android:layout_height="32sp"
            android:text="@string/level_for_field"
            app:layout_constraintBottom_toTopOf="@id/level"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/level"
            android:layout_width="0sp"
            android:layout_height="65sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/damage"
            app:layout_constraintTop_toBottomOf="@id/level_text" />



    </android.support.constraint.ConstraintLayout>

</FrameLayout>