<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <FrameLayout
        android:id="@+id/parent_characteristic"
        android:layout_width="wrap_content"
        android:layout_height="205sp">

        <RelativeLayout
            android:id="@+id/full_characteristic_component"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_for_characteristics">

            <TextView
                android:id="@+id/name_for_characteristic"
                android:layout_width="110sp"
                android:layout_height="50sp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/characteristic_input_text"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:layout_below="@+id/name_for_characteristic"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20sp"
                android:autofillHints=""
                android:background="@android:color/transparent"
                android:gravity="center"
                android:inputType="text"
                android:textSize="30sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/characteristic_modifier"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/round_shape_for_modificator"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </FrameLayout>

</layout>